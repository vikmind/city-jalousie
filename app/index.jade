extends _layout
block vars
	- var title="Главная"
block content
	main.home(ng-controller="HomeCtrl")
		section.container-holder
			.container.container_margin-bottom
				.column-3
					.news
						.news__inner
							div.news__img-holder
								img.news__img(src="img/news_constructor.jpg", alt="Constructor")
							.news__container
								.news__label
									.news__label-text
										| акция
								h2.news__title
									| Конструктор жалюзи и штор
								p.news__text
									| Затрудняетесь с выбором  материала для штор или жалюзи? Вам поможет наш конструктор! Загрузите фото своего окна и  прикладывайте шторы прямо  на фото.
								a.btn.btn_green(href="#")
									| Перейти в конструктор
				.column-1
					benefits(title="Услуги", url="services.json", id="services")
		.container
			.column-3
				.column-1-3
					benefits(title="Преимущества", url="advantages.json", id="advantages")
				.column-1-3
					include includes/product.html
				.column-1-3
					.search-color
			.column-1
				.room-type
		// Jumbotron
		section.jumbotron.container__holder
			.container
				.jumbotron__img(style="background-image: url('img/jumbotron_eco.jpg')", alt="")
				+svg-icon('leaves', 'jumbotron__icon')
				h2.jumbotron__title
					| Экологичность материалов 
					br
					| подтверждена европейскими сертификатами
				p.jumbotron__text
					| За здоровье своих детей можно не волноваться, так как мы выбираем только тех производителей материалов, которые не используют в производстве вредные химикаты.
				a.btn.btn_green(href="#") о нашем контроле
				a.btn.btn_olive(href="#") жалюзи из бамбука
		.container
			.catalog
				ul.catalog__list
					li.catalog__item(ng-repeat="(key, value) in catalogItems")
						div(ng-include="'views/directives/product.html'", scope="", onload="")
				// More btn
				.more-btn
					a.more-btn__link(href="")
						span.icon.icon-more
						span.more-btn__text Показать больше новинок